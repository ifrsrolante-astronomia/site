<div class="blog-list">
{% for post in collections.posts %}
  <div class="blog-card" data-searchable="{{ post.data.title }} {{ post.templateContent | stripHtml }}">
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <p class="post-date">Publicado em {{ post.data.date | formatDate }}</p>
    <p>{{ post.templateContent | excerpt }}</p>
  </div>
{% endfor %}
</div>

<div id="blog-empty" class="participants-empty" style="display:none;">
  Nenhum post encontrado.
</div>

<script src="/js/search-and-paginate.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    initSearchAndPaginate({
      searchInputId: 'blog-search',
      listContainerSelector: '.blog-list',
      listItemSelector: '.blog-card',
      emptyStateSelector: '#blog-empty',
      dataAttribute: 'data-searchable'
    });
  });
</script>